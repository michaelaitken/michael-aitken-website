  <div class="hero-content">
    <p class="hero-greeting">Hello, I'm</p>
    <h1 class="hero-name">{{ site.title }}</h1>
    <p class="hero-title">{{ site.description }}</p>
    <p class="hero-tagline">{{ site.tagline }}</p>
    
    <div class="hero-focus">
      <span class="focus-label">Focus Areas</span>
      <div class="focus-tags">
        <span>Modern C++</span>
        <span>Backend Systems</span>
        <span>Performance</span>
        <span>Media & Streaming</span>
      </div>
    </div>
    
    <div class="hero-cta">
      <a href="/resume/" class="btn btn-primary">View Resume</a>
      <a href="/project/" class="btn btn-secondary">See My Work</a>
    </div>
