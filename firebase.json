{
  "hosting": [
    {
      "target": "prod",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "dev",
      "public": "public",
      "headers": [
        {
          "source": "**",
          "headers": [
            { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
          ]
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ]
}
